{
  "name": "tweets-blurrer",
  "version": "1.2.0",
  "description": "Blurs tweets containing specific (eg. political) words on x.com and twitter",
  "private": true,
  "scripts": {
    "build": "rm -rf dist && npm run build:shared && npm run build:options && npm run build:content && npm run build:background && npm run copy:assets",
    "build:shared": "esbuild src/shared.ts --outfile=dist/shared.js --format=esm --platform=browser",
    "build:options": "esbuild src/options.ts --bundle --outfile=dist/options.js --format=esm --platform=browser",
    "build:content": "esbuild src/content.ts --bundle --outfile=dist/content.js --format=esm --platform=browser",
    "build:background": "esbuild src/background.ts --outfile=dist/background.js --format=iife --platform=browser",
    "copy:assets": "cp src/options.html dist/ && cp src/style.css dist/",
    "watch": "npm run build -- --watch"
  },
  "devDependencies": {
    "@types/chrome": "^0.1.24",
    "esbuild": "^0.25.11",
    "typescript": "^5.0.0"
  },
  "packageManager": "pnpm@10.18.2+sha512.9fb969fa749b3ade6035e0f109f0b8a60b5d08a1a87fdf72e337da90dcc93336e2280ca4e44f2358a649b83c17959e9993e777c2080879f3801e6f0d999ad3dd"
}
