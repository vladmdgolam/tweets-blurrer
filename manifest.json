{
  "manifest_version": 3,
  "name": "Tweets Blurrer",
  "version": "1.2",
  "description": "Blurs tweets containing specific (eg. political) words on x.com and twitter",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_title": "Tweets Blurrer",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "permissions": ["storage"],
  "options_page": "dist/options.html",
  "content_scripts": [
    {
      "matches": ["*://*.twitter.com/*", "*://*.x.com/*"],
      "js": ["dist/shared.js", "dist/content.js"],
      "css": ["dist/style.css"],
      "run_at": "document_idle",
      "type": "module"
    }
  ]
}
